<!-- 5. Output the animalType string, pet boolean, and fierceness number to the page for all the pets. -->
<style media="screen">
    li {
        background-color: wheat;
        margin-bottom: 10px;
        padding: 10px;
        width: 50%;
        font-family: sans-serif;
    }
</style>



<ul>
    {{#each animals }}
    {{#if pet}}
    <li>animalType: {{animalType}}, pet: {{pet}}, fierceness: {{fierceness}}</li>
    {{/if}}
    {{/each}}
</ul>